{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx" // âœ… include TSX files
  ],
  "exclude": [
    "src/playground",
    "node_modules",
    "dist"
  ]
}